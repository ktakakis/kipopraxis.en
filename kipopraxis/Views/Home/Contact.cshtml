    <div class="container">
        <div class="row">

            <div class="col-md-8">
                <h3>Send us a message</h3>
                <form name="contactForm" id='contact_form' method="post" action='email.php'>
                    <div class="row">
                        <div class="col-md-4">
                            <div id='name_error' class='error'>Enter your name.</div>
                            <div>
                                <input type='text' name='name' id='name' class="form-control" placeholder="Το όνομά σας">
                            </div>

                            <div id='email_error' class='error'>Enter a valid email.</div>
                            <div>
                                <input type='text' name='email' id='email' class="form-control" placeholder="Το E-mail σας">
                            </div>

                            <div id='phone_error' class='error'>Enter your phone number.</div>
                            <div>
                                <input type='text' name='phone' id='phone' class="form-control" placeholder="Το τηλεφωνό σας">
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div id='message_error' class='error'>Enter your Message.</div>
                            <div>
                                <textarea name='message' id='message' class="form-control" placeholder="Το μήνυμά σας"></textarea>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <p id='submit'>
                                <input type='submit' id='send_message' value='Αποστολη μηνυματος' class="btn btn-line">
                            </p>
                            <div id='mail_success' class='success'>Your message has been sent successfully.</div>
                            <div id='mail_fail' class='error'>Sorry, an error occurred while sending your message.</div>
                        </div>
                    </div>
                </form>
            </div>

